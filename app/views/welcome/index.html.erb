<div class="container" style="margin-left:-420px;">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Blocipedia: Social, Markdown Wikis</h3>
        </div>
    </div>
        <table class="table table-bordered">
            <div class="col-md-6 col-md-offset-4">
                <h4>Create and share Markdown Wikis</h4>
            </div>
            <div class="col-md-6 col-md-offset-5">
                <button type="button" class="btn btn-default">
                    <%= link_to "Sing In", new_user_session_path %>
                </button>
            </div>
        </table>
    <div class="container">
        <div class="row">
            <div class="col-md-2 col-md-offset-3">
                <p>Create as many public wikis as you want!</p>
            </div>
            <div class="col-md-2 col-md-offset-1">
                <p></p>
                <p>Create private wikis!</p>
            </div>
        </div>
        <div class="row">
            <div style="margin-left:10px">
                <div class="col-md-3 col-md-offset-3">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default">
                            <%= link_to "Free Account", new_user_registration_path %>
                        </button>
                    </div>
                </div>
                <div class="col-md-3 ">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default">
                            <%= link_to "Premium Account", new_user_registration_path %>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>